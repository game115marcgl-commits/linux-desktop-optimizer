def check_temperature_warnings(self):
    """Sprawdza czy temperatury nie sÄ… za wysokie"""
    try:
        import psutil
        temps = psutil.sensors_temperatures()
        for name, entries in temps.items():
            for entry in entries:
                if entry.current > 80:  # PowyÅ¼ej 80Â°C - ostrzeÅ¼enie
                    self.send_notification(
                        "ğŸŒ¡ï¸ Wysoka temperatura!",
                        f"{name}: {entry.current}Â°C"
                    )
    except:
        pass

def send_notification(self, title, message):
    """WysyÅ‚a powiadomienie systemowe"""
    subprocess.run([
        'notify-send', 
        '-i', 'dialog-warning',
        title, 
        message
    ])
