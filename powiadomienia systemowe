def check_temperature_warnings(self):
    """Sprawdza czy temperatury nie sÄ… za wysokie"""
    print("ğŸ”” SPRAWDZANIE OSTRZEÅ»EÅƒ TEMPERATUR:")
    try:
        import psutil
        temps = psutil.sensors_temperatures()
        warning_count = 0
        
        for name, entries in temps.items():
            for entry in entries:
                if entry.current > 70:  # PowyÅ¼ej 70Â°C - ostrzeÅ¼enie
                    warning_count += 1
                    print(f"  âš ï¸ Wysoka temperatura: {name} - {entry.current}Â°C")
                    self.send_notification(
                        "ğŸŒ¡ï¸ Wysoka temperatura!",
                        f"{name}: {entry.current}Â°C"
                    )
        
        if warning_count == 0:
            print("  âœ… Wszystkie temperatury w normie")
        else:
            print(f"  âš ï¸ Znaleziono {warning_count} ostrzeÅ¼eÅ„")
            
    except Exception as e:
        print(f"  âŒ BÅ‚Ä…d sprawdzania temperatur: {e}")
    print("")

def send_notification(self, title, message):
    """WysyÅ‚a powiadomienie systemowe"""
    try:
        subprocess.run([
            'notify-send', 
            '-i', 'dialog-warning',
            '-t', '5000',  # Czas wyÅ›wietlania (5 sekund)
            '-u', 'normal',  # Priorytet
            title, 
            message
        ], check=True)
        print(f"  ğŸ“¢ WysÅ‚ano powiadomienie: {title}")
    except subprocess.CalledProcessError:
        print("  âŒ Nie moÅ¼na wysÅ‚aÄ‡ powiadomienia")
    except FileNotFoundError:
        print("  âŒ Brak narzÄ™dzia 'notify-send'")
